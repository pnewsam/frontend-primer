---
import { isActivePage } from "../lib/utils";

const pages = [
  { url: "/", title: "Home" },
  {url: "/practicals/debounced-search", title: "Debounced Search"},
  {url: "/practicals/validated-form", title: "Validated Form"},
  {url: "/practicals/data-table", title: "Data Table"},
  {url: "/practicals/infinite-scroll", title: "Infinite Scroll"},
  {url: "/practicals/toasts-and-modal-system", title: "Toasts and Modal System"},
];


// Get current pathname
const currentPath = Astro.url.pathname;
---

<div class:list={"py-10 md:py-20 sticky top-0 left-0 pr-4"}>
  <ul class="space-y-3">
    {
      pages.map((page) => {
        const active = isActivePage(currentPath, page.url);
        return (
          <li class="w-full">
            <a
              class:list={["w-full border-l-4 pl-2 no-underline font-medium transition-colors", {
                "text-blue-700 bg-blue-50 px-2 py-1 border-blue-500": active,
                "text-blue-500 border-transparent hover:text-blue-600 hover:underline": !active,
              }]}
              href={page.url}
            >
              {page.title}
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
